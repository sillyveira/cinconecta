networks:
  boraimpactar:
    external: true

services:
  server:
    image: cinconecta-server
    container_name: cinconecta-server
    ports: 
      - 3000:3000
    networks:
      - boraimpactar
    environment:
      MONGO_URI: mongodb://root:pass@db:27017
      API_LINK: https://bora-impactar-prd.setd.rdmapps.com.br/api/login.json
 

  app:
    image: cinconecta-client
    container_name: cinconecta-client
    ports:
      - 5173:5173
    networks:
      - boraimpactar
